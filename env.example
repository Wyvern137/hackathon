# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenRouter API Configuration (для текстовой генерации)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-4o-mini
# Другие доступные модели:
# - openai/gpt-3.5-turbo
# - meta-llama/llama-3.2-3b-instruct
# - google/gemini-flash-1.5
# - deepseek/deepseek-chat

# Генерация изображений (GigaChat или YandexART)
GIGACHAT_API_KEY=your_gigachat_api_key_here
YANDEX_ART_API_KEY=your_yandex_art_api_key_here
IMAGE_GENERATION_ENABLED=true
IMAGE_GENERATION_PROVIDER=gigachat
# Options: gigachat, yandex

# Database Configuration
DATABASE_URL=sqlite:///bot.db
# Для PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/dbname

# Application Configuration
ENVIRONMENT=development
# Options: development, production

# Logging
LOG_LEVEL=INFO

# Speech Recognition (OpenRouter Whisper)
# Распознавание речи использует тот же OPENROUTER_API_KEY
# OPENROUTER_WHISPER_MODEL=openai/whisper-1
# SPEECH_RECOGNITION_LANGUAGE=ru
